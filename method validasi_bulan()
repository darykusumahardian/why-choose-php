public function validasi_bulan($bulan) {
    switch ($bulan) {
    case 1:
        echo "JANUARI";
        break;
    case 2:
        echo "FEBRUARI";
        break;
    case 3:
        echo "MARET";
        break;
    case 4:
        echo "APRIL";
        break;
    case 5:
        echo "MEI";
        break;
    case 6:
        echo "JUNI";
        break;
    case 7:
        echo "JULI";
        break;
    case 8:
        echo "AGUSTUS";
        break;
    case 9:
        echo "SEPTEMBER";
        break;
    case 10:
        echo "OKTOBER";
        break;
    case 11:
        echo "NOVEMBER";
        break;
    case 12:
        echo "DESEMBER";
        break;
      }
  }
